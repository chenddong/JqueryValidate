	<head>
		<meta charset="utf-8" />
		<title>jQuery Validator 演示页面</title>		
	</head>
<body>
	<form action="http://www.365mini.com/">
		<div>
			<label>用户名</label>：
			<input id="username" name="username" type="text" />
		</div>
		<div>
			<label>密码</label>：
			<input id="password" name="password" type="password" />
		</div>			
		<div>
			<label>年龄</label>：
			<input id="age" name="age" type="text" />
		</div>
		<div>
			<label>出生日期</label>：
			<input id="birthday" name="birthday" type="text" />
		</div>
		<div>
			<label>手机号码</label>：
			<input id="cellphone" name="cellphone" type="text" />
		</div>
		<div>
			<label>兴趣爱好</label>：
			<input name="hobby" type="checkbox" value="0" /> 足球 
			<input name="hobby" type="checkbox" value="1" />篮球 
		</div>
		<input id="btnSubmit" type="button" value="提交" />
	</form>
<script src="http://libs.baidu.com/jquery/1.11.3/jquery.min.js"></script>
<script src="http://www.365mini.com/static/js/layer/layer.js"></script>
<script src="http://www.365mini.com/static/js/jquery-validator-1.3.js"></script>
<script type="text/javascript">
	// 为了让提示更美观，扩展jQuery原型对象，添加layer的tips方法
	$.fn.tips = function(msg, delay){
		layer.tips(msg, this, delay || 3000);
	};

	var v = new V();
	$("#btnSubmit").click(function(){
		 // 没有传入事件名称，则表示直接校验，并返回校验结果
		var result = $("form").v( /* "submit", */ {
			"#username": "username",
			"#password": "password",
			"#age": "age",
			"#birthday": "date",
			"#cellphone": "cellphone",
			"hobby": "required"
		});
		if(result){ // result为true表示校验成功，为false表示校验失败
			alert("校验通过");
			// 自行做相应的后续处理			
		}
	});
	
</script>
</body>
